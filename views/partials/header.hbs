  <script>


    function showHide()
    {
        var selectBox = document.getElementById('instruments')
        var userinput = selectBox.options[selectBox.selectedIndex].value;
        if (userinput == 'PCLInfo')
        {
            console.log(userinput);
            document.getElementById("textshort").innerHTML = "{{getTextShort 'PCLInfo'}}";
            document.getElementById("textdetail").innerHTML = "{{getTextDetail 'PCLInfo'}}";
        }
        else if (userinput == 'DigitalAirspeedIndicatorInfo')
        {
            console.log(userinput);
            document.getElementById("textshort").innerHTML = "{{getTextShort 'DigitalAirspeedIndicatorInfo'}}";
            document.getElementById("textdetail").innerHTML = "{{getTextDetail 'DigitalAirspeedIndicatorInfo'}}";
        }
        else if (userinput == 'EADIInfo')
        {
            console.log(userinput);
            document.getElementById("textshort").innerHTML = "{{getTextShort 'EADIInfo'}}";
            document.getElementById("textdetail").innerHTML = "{{getTextDetail 'EADIInfo'}}";
        }


        else
        {
            document.getElementById("textshort").innerHTML = '';
            document.getElementById("textdetail").innerHTML = '';
        }
        return false;
    }

    function getSelection()
    {
        var selectBox = document.getElementById('instruments')
        var userinput = selectBox.options[selectBox.selectedIndex].value;
        return document.getElementById("textshort").innerHTML = 'changed' + userinput;
    }

</script>

